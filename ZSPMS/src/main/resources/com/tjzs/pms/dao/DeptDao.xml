<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 指向dao接口  实现dao -->
<mapper namespace="com.tjzs.pms.dao.DeptDao">
<!-- 
	id:方法名 
	parameterType：参数类型
	resultMap：关联返回 -->
	<select id="queryByPid"  parameterType="int" resultType="TDeptPo">
		select * from tdept where pid=#{pid}
	</select>
	
	
</mapper>